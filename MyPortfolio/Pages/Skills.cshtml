@page
@model SkillsModel
@{
    ViewData["Title"] = "Skills";
}

<section class="py-20 sm:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- FRONTEND -->
        <h2 class="text-3xl font-extrabold mb-8 border-l-4 border-blue-500 pl-4 hidden-scroll" data-delay="0.1">
            Frontend Development
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6 mb-16">

            <!-- React.js -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-blue-500 hidden-scroll" data-delay="0.2">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-blue-500">⚛️</div>
                        <h3 class="text-xl font-bold">React.js</h3>
                        <p class="text-sm text-gray-500">Modern UI</p>
                    </div>
                    <div class="skill-details-view bg-blue-600 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>State Management (Hooks, Redux)</li>
                            <li>Reusable Component Architecture</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Angular -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-red-500 hidden-scroll" data-delay="0.4">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-red-500">🅰️</div>
                        <h3 class="text-xl font-bold">Angular</h3>
                        <p class="text-sm text-gray-500">Enterprise Framework</p>
                    </div>
                    <div class="skill-details-view bg-red-600 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>TypeScript, RxJS</li>
                            <li>CLI & Module Management</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Next.js -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-gray-800 hidden-scroll" data-delay="0.6">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-gray-800">⚫</div>
                        <h3 class="text-xl font-bold">Next.js</h3>
                        <p class="text-sm text-gray-500">Full-stack React</p>
                    </div>
                    <div class="skill-details-view bg-gray-900 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>SSR & Static Generation</li>
                            <li>API Routes</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- HTML/CSS/JS -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-orange-500 hidden-scroll" data-delay="0.8">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-orange-500">💻</div>
                        <h3 class="text-xl font-bold">HTML, CSS, JS</h3>
                        <p class="text-sm text-gray-500">Core Web Fundamentals</p>
                    </div>
                    <div class="skill-details-view bg-orange-600 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>Semantic HTML</li>
                            <li>Modern ES6+</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

        <!-- BACKEND & DATA -->
        <h2 class="text-3xl font-extrabold mb-8 border-l-4 border-emerald-500 pl-4 hidden-scroll" data-delay="0.9">
            Backend & Data
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6 mb-16">

            <!-- Node.js/Express -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-green-500 hidden-scroll" data-delay="1.0">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-green-500">🟢</div>
                        <h3 class="text-xl font-bold">Node.js / Express</h3>
                        <p class="text-sm text-gray-500">Server-side JS</p>
                    </div>
                    <div class="skill-details-view bg-green-600 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>RESTful API Design</li>
                            <li>Middleware & Security</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- .NET Core -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-purple-500 hidden-scroll" data-delay="1.2">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-purple-500">💜</div>
                        <h3 class="text-xl font-bold">.NET Core</h3>
                        <p class="text-sm text-gray-500">C# & APIs</p>
                    </div>
                    <div class="skill-details-view bg-purple-600 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>Web API</li>
                            <li>Entity Framework</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- MongoDB -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-lime-700 hidden-scroll" data-delay="1.4">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-lime-700">🐘</div>
                        <h3 class="text-xl font-bold">MongoDB</h3>
                        <p class="text-sm text-gray-500">NoSQL Database</p>
                    </div>
                    <div class="skill-details-view bg-lime-800 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>Schema Design</li>
                            <li>Aggregation Pipeline</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

        <!-- CLOUD, DEVOPS & TOOLS -->
        <h2 class="text-3xl font-extrabold mb-8 border-l-4 border-indigo-500 pl-4 hidden-scroll" data-delay="1.5">
            Cloud, DevOps & Tools
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6 mb-16">

            <!-- AWS / Cloud -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-yellow-400 hidden-scroll" data-delay="1.6">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-yellow-400">☁️</div>
                        <h3 class="text-xl font-bold">AWS / Cloud</h3>
                        <p class="text-sm text-gray-500">Cloud & DevOps</p>
                    </div>
                    <div class="skill-details-view bg-yellow-500 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>Serverless (Lambda)</li>
                            <li>Deployment & CI/CD</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Git / GitHub -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-red-700 hidden-scroll" data-delay="1.8">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-red-700">🐙</div>
                        <h3 class="text-xl font-bold">Git / GitHub</h3>
                        <p class="text-sm text-gray-500">Version Control</p>
                    </div>
                    <div class="skill-details-view bg-red-800 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>Branching Strategies</li>
                            <li>Code Collaboration</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Postman -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-orange-600 hidden-scroll" data-delay="2.0">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-orange-600">📦</div>
                        <h3 class="text-xl font-bold">Postman</h3>
                        <p class="text-sm text-gray-500">API Testing</p>
                    </div>
                    <div class="skill-details-view bg-orange-700 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>Request Automation</li>
                            <li>API Documentation</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Design Tools -->
            <div class="group bg-white rounded-xl shadow-lg h-64 border-b-4 border-pink-500 hidden-scroll" data-delay="2.2">
                <div class="skill-content-container">
                    <div class="skill-default-view flex flex-col justify-center items-center h-full text-center">
                        <div class="text-7xl mb-4 text-pink-500">🎨</div>
                        <h3 class="text-xl font-bold">Design Tools</h3>
                        <p class="text-sm text-gray-500">Figma, Canva, Bootstrap</p>
                    </div>
                    <div class="skill-details-view bg-pink-600 flex flex-col justify-center p-6 text-left text-white">
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li>UI/UX Prototyping</li>
                            <li>Design Hand-off</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

    </div>
</section>

<footer class="bg-gray-900 text-white py-10 text-center">
    <p class="text-gray-400">&copy; 2025 Jyoti Ranjan Behera</p>
</footer>

