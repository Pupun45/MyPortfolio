@page
@model MyPortfolio.Pages.ResumeModel
@{
    ViewData["Title"] = "Resume";
}

<section class="py-20 bg-gray-50 flex flex-col items-center hidden-scroll" data-delay="0.1">
    <div class="max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl font-black text-gray-900 mb-6">
            View & Download Resume
        </h1>
        <p class="text-xl text-gray-700 mb-8">
            Interactive preview of my qualifications.
        </p>
        <a href="~/lib/Jyoti.pdf" download class="download-btn">
            Download Resume (PDF)
        </a>
    </div>

    <div class="w-full max-w-4xl mt-16 px-4 sm:px-6 lg:px-8">
        <div class="pdf-viewer-container rounded-lg">
            <iframe src="~/lib/Jyoti.pdf" width="100%" height="800" class="border-none"
                    title="Resume Preview">
                <p class="p-8 text-center text-gray-600">
                    Your browser does not support PDFs. Please use the download link above.
                </p>
            </iframe>
        </div>
    </div>
</section>
